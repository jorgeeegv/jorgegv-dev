<style is:global>

* {
	min-width: 0;
	font: inherit;
	scrollbar-color: gray transparent !important;
  	scrollbar-width: thin;
}
*::before,*::after{
	box-sizing: border-box;
}
img, video, svg {
	display: block;
	height: auto;
	max-width: 100%;
}
body {
	margin: 0;
	min-height: 100dvb;
}
h1,h2,h3,h4,h5,h6 {
